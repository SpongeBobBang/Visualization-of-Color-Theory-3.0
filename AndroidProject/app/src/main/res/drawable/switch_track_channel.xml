<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center_vertical|fill_horizontal">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/red_50A"/>
                    <solid android:color="@color/transp"/>
                    <corners android:radius="16dp" />
                    <size android:height="32dp" android:width="72dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:gravity="center_vertical|fill_horizontal">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/light"/>
                    <solid android:color="@color/transp"/>
                    <corners android:radius="16dp" />
                    <size android:height="32dp" android:width="72dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>